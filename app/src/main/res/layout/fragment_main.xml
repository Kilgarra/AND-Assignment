<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/logo_text">

        </ImageView>

        <ImageView
            android:id="@+id/imageview_prescriptions"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:src="@drawable/prescription">

        </ImageView>

        <Button
            android:id="@+id/goToPrescriptions"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="@string/go_to_prescriptions">

        </Button>

        <ImageView
            android:id="@+id/imageview_vitamins"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="20dp"
            android:src="@drawable/vitamin">

        </ImageView>

        <Button
            android:id="@+id/goToVitamins"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="@string/go_to_vitamins">

        </Button>
    </LinearLayout>


</FrameLayout>